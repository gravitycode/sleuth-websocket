<?xml version="1.0" encoding="UTF-8"?>
<!-- por defecto se escanea cada minuto -->
<configuration scan="true" scanPeriod="30 seconds">


	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread,%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}] %logger{35} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<logger name="org.springframework.cloud.sleuth.instrument.messaging" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>

